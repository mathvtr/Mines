	<script>
		var tempo = 60; // tempo inicial em segundos
		var cronometro; // variável para armazenar o cronômetro

		function iniciarContagem() {
			cronometro = setInterval(function() {
				tempo--;
				document.getElementById("contador").innerHTML = "🔥: A Rodada só será válida Até " + tempo + " segundos";
				if (tempo == 0) {
					clearInterval(cronometro);
					document.getElementById("contador").innerHTML = "Tempo esgotado! Para usar o Hack novamente gere outro sinal!";
				}
			}, 1000);
		}

		function reiniciarContagem() {
			clearInterval(cronometro);
			tempo = 60;
			iniciarContagem();
		}
	</script>

	<p id="contador" class="texto"> 🔥: A Rodada só será válida Até 60 segundos</p>


                
    <script>
      function alterarNumero() {
        var numero = document.getElementById("texto");
        if (numero.innerHTML == "💣Apostar: 4 
Minas") {
          numero.innerHTML = "💣Apostar: 4 Minas";
        } else {
          numero.innerHTML = "💣Apostar: 4 Minas";
        }
      }
    </script>
  
  
